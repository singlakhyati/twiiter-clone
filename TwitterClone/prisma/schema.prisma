model User {
  id      Int    @id @default(autoincrement())
  firstName   String
  LastName   String
  email String @unique
  password String
  twitt Twitt[]
  like Like[]
  comment comment[]
}


model Twitt{
  id Int @id @default(autoincrement())
  title String
  content String
  userid Int
  likeCount Int @default(0)
  user User @relation(fields: [userid],references: [id],onDelete: Cascade)
  like Like[]
  comment comment[]
}
model Like{
  id Int @id @default(autoincrement())
  userId Int 
  tweetId Int
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
  tweet Twitt @relation(fields: [tweetId],references: [id],onDelete: Cascade)

}
model comment{
  id Int @id @default(autoincrement())
  userId Int 
  tweetId Int
  comment String
  user User @relation(fields: [userId],references: [id],onDelete: Cascade)
  tweet Twitt @relation(fields: [tweetId],references: [id],onDelete: Cascade)
}